<resources>



    <style name="AppMatrialTheme" parent="SuperMaterialTheme">

    </style>

    <!-- Base application theme. -->
    <style name="SuperMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppMatrialTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppMatrialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppMatrialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppMatrialTheme.EditTextStyle" parent="Base.Widget.AppCompat.EditText">

        <item name="android:background">@drawable/my_border</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_edittext</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>

    </style>



    <style name="TextView" parent="@android:style/Widget.TextView" />

    <style name="TextView.Large" parent="android:Theme">
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="TextView.Medium" parent="android:Theme">
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="TextView.Small" parent="android:Theme">
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>



    <style name="AppMatrialTheme.ButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:padding">@dimen/padding_edittext</item>
    </style>



    <style name="MyToolBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="MyPopTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>


</resources>
